{
  "name": "client-app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "generators": {
    "@schematics/angular:component": {
      "style": "scss"
    }
  },
  "sourceRoot": "apps/client-app/src",
  "prefix": "app",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:application",
      "options": {
        "outputPath": "dist/apps/client-app",
        "index": "apps/client-app/src/index.html",
        "browser": "apps/client-app/src/main.ts",
        "polyfills": [
          "zone.js"
        ],
        "tsConfig": "apps/client-app/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          "apps/client-app/src/favicon.ico",
          "apps/client-app/src/assets",
          {
            "input": "libs/shared/assets/src/lib",
            "glob": "**/*",
            "output": "assets"
          }
        ],
        "styles": [
          "node_modules/izitoast/dist/css/iziToast.min.css",
          "libs/shared/assets/src/lib/styles.scss"
        ],
        "scripts": [
          "node_modules/apexcharts/dist/apexcharts.min.js",
          "node_modules/topbar/topbar.min.js",
          "node_modules/izitoast/dist/js/iziToast.min.js"
        ],
        "allowedCommonJsDependencies": [
          "apexcharts"
        ]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "4mb",
              "maximumError": "5mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "150kb",
              "maximumError": "150kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/client-app/src/environments/environment.ts",
              "with": "apps/client-app/src/environments/environment.prod.ts"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "fileReplacements": [
            {
              "replace": "apps/client-app/src/environments/environment.ts",
              "with": "apps/client-app/src/environments/environment.dev.ts"
            }
          ],
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        },
        "staging": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "4mb",
              "maximumError": "5mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "150kb",
              "maximumError": "150kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/client-app/src/environments/environment.ts",
              "with": "apps/client-app/src/environments/environment.staging.ts"
            }
          ],
          "outputHashing": "all"
        }
      },
      "defaultConfiguration": "development"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "client-app:build:production"
        },
        "staging": {
          "buildTarget": "client-app:build:staging"
        },
        "development": {
          "buildTarget": "client-app:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "client-app:build"
      }
    },
    "test": {
      "executor": "@angular-devkit/build-angular:karma",
      "options": {
        "polyfills": [
          "zone.js",
          "zone.js/testing"
        ],
        "tsConfig": "apps/client-app/tsconfig.spec.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          "apps/client-app/src/favicon.ico",
          "apps/client-app/src/assets"
        ],
        "styles": [
          "apps/client-app/src/styles.scss"
        ],
        "scripts": [
          "node_modules/apexcharts/dist/apexcharts.min.js"
        ]
      }
    }
  }
}
